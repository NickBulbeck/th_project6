extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Home
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= name

        p.lead.text-light= jobTitle

        .portfolio-bio
          p= bio

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills
        ul
          each skill of skills
            li= skill
        h6 Contact Info

        ul
          each contact of contacts
            li= contact
        each medium in media
          a.button.expanded(href=`${medium.url}` target="_blank")= medium.name
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Home
  